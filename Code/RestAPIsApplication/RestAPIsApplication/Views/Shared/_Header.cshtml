<div class="row">
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark ">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">Rest Service & APIs Application</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collaspe navbar-collapse" id="navbarSupportedContent">

            @if (Session["UserID"] == null)
            {
                <ul class="navbar-nav mr-auto"></ul>
                <ul class="nav navbar-nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "User")">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Register", "User")">Sign Up</a>
                    </li>
                </ul>
            }
            else
            {
                if (Session["Role"].ToString() == "1")
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("CurrentWeather","OpenWeather")">OpenWeather API</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UserList","Admin")">Manage Users</a>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout","User")">Logout</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("CurrentWeather","OpenWeather")">OpenWeather API</a>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout","User")">Logout</a>
                        </li>
                    </ul>
                }
            }
        </div>
    </nav>
</div>

@if (TempData["Error"] != null)
{
    <div class="row justify-content-center" style="padding-top:40px; padding-bottom:0px; margin-bottom:0px">
        <div class="container alert-danger" style="padding-top:10px; border-radius:10px;">
            <p class="text-center">@TempData["Error"]</p>
        </div>
    </div>
}
@if (TempData["Message"] != null)
{
    <div class="row justify-content-center" style="padding-top:40px; padding-bottom:0px; margin-bottom:0px">
        <div class="container alert-danger" style="padding-top:10px; border-radius:10px;">
            <p class="text-center">@TempData["Message"]</p>
        </div>
    </div>
}