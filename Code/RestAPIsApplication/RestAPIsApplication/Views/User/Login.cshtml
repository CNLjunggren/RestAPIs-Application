@model RestAPIsApplication.Models.UserModel
@{
    ViewBag.Title = "Login User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Declaration of the Current Weather form for a given location in the HttpPost format. -->
@using (Html.BeginForm("LoginUser", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row" style="padding-top:15px;">
        <div class="col-md-2">

        </div>
        <div class="col-md-8">
            <div class="jumbotron" style="padding-top:30px; padding-bottom:30px; margin-top:20px;">
                <div class="row justify-content-center">
                    <h2>Login as an existing user:</h2>
                </div>
                <!-- Row used for the Username/Email Address input field and its data validation error message in the form. -->
                <div class="row justify-content-center">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, "Username or Email Address")
                        <br />@Html.EditorFor(model => model.Username, new { @class = "form-control" })
                        <br />@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!-- Row used for the Password input field and its data validation error message in the form. -->
                <div class="row justify-content-center">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, "Password")
                        <br />@Html.EditorFor(model => model.Password, new { @class = "form-control" })
                        <br />@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <!-- Submit button used to submit the a request for a given location's current weather. -->
                <div class="row justify-content-center" style="padding-top:10px;">
                    <input type="submit" class="btn btn-dark" value="Login" />
                </div>
                <hr />
                <div class="row justify-content-center style=" padding-bottom:30px;"">
                    <label style="padding-right:15px; margin-top:5px;">Not a member?</label>
                    <button class="btn btn-dark btn-sm" onclick="location.href='@Url.Action("Register", "User")'">Sign Up</button>
                </div>
            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>
}